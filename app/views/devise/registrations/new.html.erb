
<div class="page-head">
	<h3 class="page-head-title"><%= t('.sign_up') %></h3>
</div>

<div class="col-md-6 col-md-offset-3">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field form-group">
      <%= f.label :name%>
      <%= f.text_field :name, autofocus: true, class: 'form-control', required: true  %>
    </div>
    
    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: true %>
    </div>
  
    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
      <% end %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control', required: true %>
    </div>
  
    <div class="field form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: true %>
    </div>
  
    <div class="section-box">
      <h4 class="section-box-title">オプション</h4>
      <span class="section-box-body content-center">
        <p>
          <div class="field form-group">
            <%= f.label :empathy_button_kind %>
            <%= f.select :empathy_button_kind, empathy_button_kind_hash(), {}, class: 'form-control' %>
          </div>
        </p>
        <p>
          <div class="field form-group">
            <%= f.check_box :is_disable_follow %>
            <%= f.label :is_disable_follow, class: 'inline-label' %>
          </div>
        </p>
        <p>
          <div class="field form-group">
            <%= f.check_box :is_hide_edges %>
            <%= f.label :is_hide_edges, class: 'inline-label' %>
          </div>
        </p>
        <p>
          ※後で設定から変更できます
        </p>
      </span>
    </div>
  
    <div class="form-group text-center">
      <%= check_box_tag :accepted %>
      <%= label_tag :accepted do %>
        <%= link_to '利用規約', terms_path %>に同意する
      <% end %>
    </div>
    
    <div class="actions form-group text-center">
      <%= f.submit t('.sign_up'), class: 'btn btn-default disabled', id: 'sign-up-button' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  
</div><!-- .col-md-6 .col-md-offset-3 -->


<% content_for :script do %>

  <%= javascript_include_tag 'common/accepted.js' %>

<% end %>
