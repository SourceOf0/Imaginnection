<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :name%>
    <%= f.text_field :name, autofocus: true, class: 'form-control', required: true  %>
  </div>
  
  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: 'form-control', required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
  </div>

  <div class="field form-group">
    <%= f.check_box :is_disable_follow %>
    <%= f.label :is_disable_follow %>
  </div>

  <div class="field form-group">
    <%= f.check_box :is_hide_edges %>
    <%= f.label :is_hide_edges %>
  </div>

  <div class="actions form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>