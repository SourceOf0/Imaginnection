<%# 共感を解除するリンクを作る %>
<%# @params from_node: 対象fromノード %>
<%# @params to_node: 対象toノード %>
<%# @params is_hide_user: 名前非公開か %>

<%= form_tag(edge_path("delete"), method: :delete, id: "edge-delete-form", remote: true) do %>
  
  <%= hidden_field_tag :from_node_name, from_node.name %>
  <%= hidden_field_tag :to_node_name, to_node.name %>

  <div class="text-center">
    <div class="form-group check-hide-user">
      <%= check_box_tag :is_hide_user, true, is_hide_user, {disabled: true} %>
      <%= label_tag :is_hide_user, '自分の名前を非公開にする' %>
    </div>

    <div class="form-group">
      <%= submit_tag '共感解除（削除）', class: 'btn btn-danger active', name: nil %>
    </div>
  </div>
  
<% end %>
