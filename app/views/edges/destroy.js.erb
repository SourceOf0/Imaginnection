
<% if !@from_node.valid? %>

  $("#info-modal").html("<%=j render 'layouts/error_messages', model: @from_node %>").modal("show");

<% elsif !@to_node.valid? %>

  $("#info-modal").html("<%=j render 'layouts/error_messages', model: @to_node %>").modal("show");
  
<% else %>
  
  <%# エッジを削除する %>
  var edge = imaginnection.createEdgeData("<%=j current_user.ref_id %>", "<%=j @from_node.name.html_safe %>", "<%=j @to_node.name.html_safe %>", <%= @is_hide_user %>);
  imaginnection.removeEdge( edge );
  
  <%# ポップアップを閉じる %>
  $("#users-modal").modal("hide");
  
  <%# ノードへの操作メニューを消す %>
  $("#node-option li").removeClass("active");

<% end %>
