      <% if params[:controller] != 'edges' %>
        <div class="container">
          
          <%= yield %>
          
        </div>
      <% end %>
  
    </main>
    
    <%= render 'layouts/footer' %>
    
    <div id="info-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

    <%= yield :script %>
