
<header>
  
  <nav class="row">
    
    <% if user_signed_in? %>
      
      <ul class="centering col-xs-6 text-left">
        <li>
          <div class="btn-group icon-bar">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar-top"></span>
              <span class="icon-bar-middle"></span>
              <span class="icon-bar-bottom"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to(edges_path, class: 'user') do %>
                  <p class="user-name"><%= current_user.name %></p>
                  <p class="user-email"><%= current_user.email %></p>
                <% end %>
              </li>
              <li>
                <%= link_to('フォロー', followings_follows_path) %>
              </li>
              <li>
                <%= link_to('フォロワー', followers_follows_path) %>
              </li>
              <li>
                <%= link_to('設定', edit_user_registration_path) %>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to('ログアウト', destroy_user_session_path, method: :delete) %>
              </li>
            </ul>
          </div>
        </li>
        <li>
          <%= link_to('', class: 'icon button') do %>
            <span class="glyphicon glyphicon-bell"></span>
          <% end %>
        </li>
      </ul><!-- .col-xs-6 -->
          
      <ul class="centering col-xs-6 text-right">
        <li>
          <%= link_to(new_node_path, class: 'icon button') do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </li>
      </ul><!-- .col-xs-6 -->
      
      <div class="logo">
        <%= link_to(edges_path) do %>
          <%= image_tag('logo_120_18.png') %>
        <% end %>
      </div><!-- .logo -->
      
    <% else %>
      
      <ul class="centering col-xs-6 text-left" >
        <li class="<%= 'active' if current_page?(new_user_registration_path) %>">
          <%= link_to('新規登録', new_user_registration_path, class: 'text-link') %>
        </li>
      </ul><!-- .col-xs-6 -->
      
      <ul class="centering col-xs-6 text-right">
        <li class="<%= 'active' if current_page?(new_user_session_path) %>">
          <%= link_to('ログイン', new_user_session_path, class: 'text-link') %>
        </li>
      </ul><!-- .col-xs-6 -->

      <div class="logo">
        <%= link_to(root_path) do %>
          <%= image_tag('logo_120_18.png') %>
        <% end %>
      </div><!-- .logo -->
  
    <% end %>
    
  </nav>
  
</header>
