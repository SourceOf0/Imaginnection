
<%# @param users: リスト表示するユーザのモデルインスタンス %>

<% if users.any? %>

  <ul class="media-list">
    <% users.each do |user| %>
      <li>
        <span>
          <%= user.name %>
        </span>
        <span>
          <%= render 'follows/follow_form', user: user %>
        </span>
      </li>
    <% end %>
  </ul>
  
<% else %>
  <%# 該当ユーザなし %>
<% end %>
