<%# フォローするリンクを作る %>
<%# @params user: 対象のユーザ %>

<%#
    MEMO: Ajaxでのリンクを使用するためにremote: trueを使用
    参考: https://railsguides.jp/working_with_javascript_in_rails.html
%>
<% if user %>
  <% if !user.is_disable_follow %>
    <%# フォローしてない %>
    <%= link_to follows_path(id: user.ref_id), method: :post, remote: true, class: 'btn btn-default btn-xs' do %>
      フォローする
    <% end %>
  <% end %>
<% end %>
